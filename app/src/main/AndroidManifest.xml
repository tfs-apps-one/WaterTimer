<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tfsapps.watertimer">

    <!-- ネットワーク -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- バイブレーション -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- カメラ -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wt256x256"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:roundIcon="@drawable/wt256x256"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaterTimer">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4924620089567925~2961145929" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CrSetActivity" />
    </application>

</manifest>